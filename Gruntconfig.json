{
  "srcPaths": {
    "make": "src/my_profile.make",
    "drupal": "src"
  },
  "buildPaths": {
    "build": "build",
    "html": "build/html",
    "package": "build/packages",
    "reports": "build/reports",
    "temp": "build/temp",
    "profile": "src/profiles",
    "custom_theme": "src/themes/custom/geek_portland",
    "patternlab": "src/themes/custom/geek_portland/pattern-lab",
    "modules": "build/html/sites/all/modules",
    "themes": "build/html/sites/all/themes",
    "libraries": "build/html/sites/all/libraries"
  },
  "domain": "geek-portland.dev",
  "packages": {
    "srcFiles": ["!sites/*/files/**", "!xmlrpc.php", "!modules/php/*"],
    "projFiles": ["README*", "bin/**"]
  },
  "phpcs": {
    "dir": [
      [
        "<%= config.srcPaths.drupal %>/**/*.php",
        "<%= config.srcPaths.drupal %>/**/*.module",
        "<%= config.srcPaths.drupal %>/**/*.inc",
        "<%= config.srcPaths.drupal %>/**/*.install",
        "<%= config.srcPaths.drupal %>/**/*.profile",
        "!<%= config.srcPaths.drupal %>/sites/**",
        "!<%= config.srcPaths.drupal %>/**/*.box.inc",
        "!<%= config.srcPaths.drupal %>/**/*.features.*inc",
        "!<%= config.srcPaths.drupal %>/**/*.pages_default.inc",
        "!<%= config.srcPaths.drupal %>/**/*.panels_default.inc",
        "!<%= config.srcPaths.drupal %>/**/*.panelizer.inc",
        "!<%= config.srcPaths.drupal %>/**/*.strongarm.inc",
        "!<%= config.srcPaths.drupal %>/**/geek_fullcalendar_plugin_pager.inc",
        "!<%= config.buildPaths.custom_theme %>/css/**",
        "!<%= config.buildPaths.custom_theme %>/color/**"
      ]
    ],
    "path": "vendor/bin/phpcs"
  },
  "phpmd": {
    "path": "vendor/bin/phpmd"
  },
  "drush": {
    "cmd": "vendor/bin/drush"
  },
  "behat": {
    "flags": "--tags ~@wip"
  },
  "eslint": true
}
